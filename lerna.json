{
  "packages": [
    "configs/*",
    "packages/core/*",
    "packages/core/engines/*",
    "packages/mobile",
    "packages/web"
  ],
  "version": "0.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["develop", "staging", "master"],
      "message": "chore(release): Publish"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
